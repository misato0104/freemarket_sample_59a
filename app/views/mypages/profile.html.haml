.mypage-wrapper
  = render 'shared/header'
  - breadcrumb :profile
  = render 'layouts/breadcrumbs'
  .mypage-main
    = render 'side-bar'
    .mypage-main__profile
      .mypage-main__profile__text
        プロフィール
      = form_with model: @user, url: update_profile_mypage_path, local: true do |f|
        .mypage-main__profile__box
          .mypage-main__profile__box__top
            .mypage-main__profile__box__top__human
              .mypage-main__profile__box__top__human__image
                = icon('fas', 'user', class: "icon")
              .mypage-main__profile__box__top__human__name
                = f.text_field :nickname, value:current_user.nickname
          .mypage-main__profile__box__comment
            .mypage-main__profile__box__comment__text
              = f.text_area :profile, placeholder:"例）hello!!"
            .mypage-main__profile__box__comment__btn
              = f.submit '変更する', class: "submit-btn"

  = render 'shared/footer'


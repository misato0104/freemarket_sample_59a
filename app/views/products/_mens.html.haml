.toppage-main__container__item-box
  .toppage-main__container__item-box__list
    .toppage-main__container__item-box__list__name
      メンズ
    .toppage-main__container__item-box__list__more
      もっと見る >
  .toppage-main__container__item-box__contents
    .toppage-main__container__item-box__contents__images
      - @mens.each do |product|
        - unless current_user.id == product.user_id
          .toppage-main__container__item-box__contents__images__box
            = link_to product_path(product.id) do
              .toppage-main__container__item-box__contents__images__box__image
                - if product.selling_status_id == "3"
                  .sold-out
                    .sold-out__text 
                      SOLD
                = image_tag "#{product.images[0].image}"
              .toppage-main__container__item-box__contents__images__box__price
                = "¥#{product.price}"
              .toppage-main__container__item-box__contents__images__box__text
                %div
                  = product.product_name

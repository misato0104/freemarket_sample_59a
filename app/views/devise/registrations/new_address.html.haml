.signup-wrapper
  = render 'devise/shared/header-address'
  .signup-main
    .signup-main__container
      .signup-main__container__top
        住所入力
      = form_with model: @address, url: addresses_path, local: true, method: 'post', class: "signup-form" do |f|
        .signup-main__container__box
          .signup-main__container__form-group
            = f.label 'お名前(全角)'
            %span.signup-main__container__form-require 必須
            %br
            .signup-main__container__name-box
              = f.text_field :last_name, autofocus: true, placeholder: '例) 山田', class: 'input-default input-default-half'
              = f.text_field :first_name, placeholder: '例) 彩', class: 'input-default input-default-half'
          .signup-main__container__form-group
            = f.label 'お名前カナ(全角)'
            %span.signup-main__container__form-require 必須
            %br
            .signup-main__container__name-box
              = f.text_field :last_name_kana, placeholder: '例) ヤマダ', class: 'input-default input-default-half'
              = f.text_field :first_name_kana, placeholder: '例) アヤ', class: 'input-default input-default-half'
          .signup-main__container__form-group
            = f.label '郵便番号'
            %span.signup-main__container__form-require 必須
            %br
            = f.text_field :zip_code, placeholder: '例)123-4567', class: 'input-default'
          .signup-main__container__form-group
            = f.label '都道府県'
            %span.signup-main__container__form-require 必須
            %br
            = f.collection_select :prefecture, Prefecture.all, :name, :name, {prompt: "---"}, class: 'input-default'
          .signup-main__container__form-group
            = f.label '市区町村'
            %span.signup-main__container__form-require 必須
            %br
            = f.text_field :city, placeholder: '例)横浜市緑区', class: 'input-default'
          .signup-main__container__form-group
            = f.label '番地'
            %span.signup-main__container__form-require 必須
            %br
            = f.text_field :block_num, placeholder: '例)青山1-1-1', class: 'input-default'
          .signup-main__container__form-group
            = f.label '建物名'
            %span.signup-main__container__form-optional 任意
            %br
            = f.text_field :building_name, placeholder: '例)柳ビル', class: 'input-default'
          .signup-main__container__form-group
            = f.label '電話'
            %span.signup-main__container__form-optional 任意
            %br
            = f.text_field :phone_num, placeholder: '例)09012345678', class: 'input-default'
          .signup-main__container__content
            = f.submit '次へ進む', class: "input-default btn-next"
            = link_to "仮ボタン 次のページ", cards_path
  = render 'shared/footer-simple'
.signup-wrapper
  = render 'shared/header-simple'
  .signups-main
    .signups-main__box
      .signups-main__box__top
        新規会員登録
      .signups-main__box__bottom
        .signups-main__box__bottom__btn
          = link_to "#" do
            .signups-main__box__bottom__btn__mail
              = icon("far", "envelope", class: "icon")
              メールアドレスで登録する
        .signups-main__box__bottom__btn
          = link_to "#" do
            .signups-main__box__bottom__btn__facebook
              = icon("fab", "facebook-square", class: "icon")
              Facebookで登録する
        .signups-main__box__bottom__btn
          = link_to "#" do
            .signups-main__box__bottom__btn__google
              = icon("fab", "google", class: "icon")
              Googleで登録する
  = render 'shared/footer-simple'
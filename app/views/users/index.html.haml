.signup-wrapper
  = render 'shared/header-simple'
  .signups-main
    .signups-main__box
      .signups-main__box__top
        新規会員登録
      .signups-main__box__bottom
        .signups-main__box__bottom__mail
          = link_to "#" do
            = icon("far", "envelope", class: "icon")
            メールアドレスで登録する
        .signups-main__box__bottom__facebook
          = link_to "#" do
            = icon("fab", "facebook-square", class: "icon")
            Facebookで登録する
        .signups-main__box__bottom__google
          = link_to "#" do
            = image_tag("", class: 'icon')
            Googleで登録する
  = render 'shared/footer-simple'